{
  "name": "dirliner",
  "version": "1.0.1",
  "description": "Transform directory structures into flat files while preserving path relationships in filenames. Convert paths like src/app/page.ts to src-app-page.ts automatically.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dirliner": "./dist/bin/dirliner.js"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "yarn build",
    "start": "node dist/bin/dirliner.js",
    "clean": "rimraf dist",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "directory",
    "flatten",
    "files",
    "path",
    "structure",
    "cli",
    "typescript",
    "node",
    "javascript",
    "dirliner",
    "dirliner-cli",
    "flat-files",
    "flat-directory",
    "directory-mapper",
    "file-transformer",
    "path-converter",
    "code-preparation",
    "ai-tools",
    "code-review"
  ],
  "author": {
    "name": "Ali Turki",
    "url": "https://github.com/anbturki"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "colorette": "^2.0.20",
    "commander": "^12.1.0",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.25.12",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anbturki/dirliner.git"
  },
  "bugs": {
    "url": "https://github.com/anbturki/dirliner/issues"
  },
  "homepage": "https://github.com/anbturki/dirliner#readme",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "resolutions": {
    "typescript": "^5.7.2"
  }
}